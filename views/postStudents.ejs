    <h1 class="form_h1">Post new students:</h1>

    <div class="box">
        <form action="/students/postStudents" method="post"">
            <h2>post student:</h2>
            <div class="inputBox">
                <input type="text" name="firstName" required>
                <span>First-Name</span>
                <i></i>
            </div>

            <div class="inputBox">
                <input type="text" name="lastName" required>
                <span>Last-Name</span>  
                <i></i>
            </div>

            <div class="inputBox">
                <input type="email" name="email" required>
                <span>Email (ex. a@gmail.com)</span>
                <i></i>
            </div>

            <div class="inputBox">
                <input type="tel" name="tel" pattern="05[0-9]-[0-9]{7}" required>
                <span>Telephone (05#-#######)</span>
                <i></i>
            </div>

            <input type="submit" value="SUBMIT">

        </form>
    </div>





















