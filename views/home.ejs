<body>
 <header>
    <nav>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/students/postStudents">Post New Students</a></li>
        </ul>
    </nav>
 </header>
 
 <h1>This is where u'll see students u already posted:</h1>

 <div class="col-lg-9">
        <table class="table table-striped">
         <thead>
             <tr>
                 <th scope="col">Full Name</th>
                  <th scope="col">Email</th>
                  <th scope="col">Telephone</th>
                  <th scope="col">Deleteion</th>
             </tr>
            </thead>
         <tbody>
                <% users.forEach((data) => { %>
                  <tr>
                        <td><%= data.firstName %> <%= data.lastName %></td>
                        <td><%= data.email %></td>
                        <td><%= data.tel %></td>
                        <td>
                            <a href="/students/deleteUser/<%= data.id %>" class="btn btn-danger">DELETE</a>
                        </td>
                
                        
                    </tr>
                     <% }) %>   
            </tbody>
        </table>

    </div>




